<!-- views/home.handlebars -->
{{#if user}}
  <div class="jumbotron">
    <h1>Twitter-json User Authentication</h1>
    <p>Below is your profile information (maybe in a day or two)</p>
  </div>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Profile Information</h3>
    </div>
    <div class="panel-body">
      <p>Username: {{user.username}}</p>
      <p>Avatar: <img src="{{user.avatar}}" width="40" height="40"/></p>
      <p> Email : {{user.email}} </p>
    </div>
  </div>

{{else}}
  <div class="jumbotron">
    <h1>Twitter-json User Authentication</h1>
    <p>Sign in and view your profile (or errors, mostly errors)</p>
    <p>
      <a href="/signin" class="btn btn-primary btn-lg" role="button">
        <span class="glyphicon glyphicon-user"></span>
        Sign in!
      </a>
    </p>
  </div>

{{/if}}
